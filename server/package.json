{
  "name": "server",
  "version": "1.0.0",
  "description": "Server for the game",
  "type": "module",
  "main": "dist/server/src/index.js",
  "scripts": {
    "start": "node dist/server/src/index.js",
    "dev": "nodemon --legacy-watch",
    "build_old": "tsc",
    "build": "tsup src/index.ts --format esm --dts --out-dir dist/server/src --minify --sourcemap --clean"
  },
  "dependencies": {
    "express": "^4.18.2",
    "sanitize-html": "^2.17.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/sanitize-html": "^2.16.0",
    "@types/uuid": "^10.0.0",
    "nodemon": "^3.1.9",
    "tsup": "^8.5.0",
    "typescript": "^5.0.4"
  }
}
